---

<Layout title="活動レポート">
  <div class="max-w-4xl mx-auto">
    <!-- ヘッダーセクション -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold">活動レポート</h1>
      <p class="text-lg text-gray-600">
        森林ボランティア活動の様子をお届けします。日々の活動を気軽にチェック！
      </p>
    </div>

    <!-- 投稿ボタン -->
    <div class="mb-8 text-center">
      <button class="bg-primary-600 text-white px-6 py-3 rounded-full hover:bg-primary-700 transition-colors font-semibold">
        <i class="fas fa-plus mr-2"></i>新しいレポートを作成
      </button>
    </div>

    <!-- 活動レポート一覧 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {blogPosts.map((post) => (
        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <!-- 画像 -->
          <div class="relative">
            <img
              src={post.image}
              alt="活動写真"
              class="w-full h-48 object-cover"
            />
            <!-- 日付オーバーレイ -->
            <div class="absolute top-3 left-3 bg-white/90 backdrop-blur-sm rounded-lg px-3 py-1">
              <div class="text-sm font-semibold text-gray-800">
                {new Date(post.date).toLocaleDateString('ja-JP', { month: 'short', day: 'numeric' })}
              </div>
            </div>
          </div>

          <!-- 投稿内容 -->
          <div class="p-4">
            <!-- 投稿ヘッダー -->
            <div class="flex items-center mb-3">
              <div class="w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center text-white font-bold text-sm mr-2">
                {post.author.charAt(0)}
              </div>
              <div class="flex-1">
                <div class="font-semibold text-gray-800 text-sm">{post.author}</div>
                <div class="text-xs text-gray-500">
                  {new Date(post.date).toLocaleDateString('ja-JP')}
                </div>
              </div>
            </div>

            <!-- テキスト内容 -->
            <p class="text-gray-800 mb-3 leading-relaxed text-sm line-clamp-3">
              {post.content}
            </p>

            <!-- アクションボタン -->
            <div class="flex items-center justify-between pt-3 border-t border-gray-100">
              <div class="flex items-center space-x-4">
                <button class="flex items-center text-gray-500 hover:text-red-500 transition-colors text-sm">
                  <i class="fas fa-heart mr-1"></i>
                  <span>{post.likes}</span>
                </button>
                <button class="flex items-center text-gray-500 hover:text-blue-500 transition-colors text-sm">
                  <i class="fas fa-comment mr-1"></i>
                  <span>{post.comments}</span>
                </button>
              </div>
              <a
                href={`/blog/${post.id}`}
                class="text-primary-600 hover:text-primary-800 font-semibold text-sm"
              >
                詳細を見る
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- ページネーション -->
    <div class="flex justify-center mt-12">
      <nav class="flex items-center space-x-2">
        <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded hover:bg-gray-300">
          <i class="fas fa-chevron-left"></i>
        </button>
        <button class="px-4 py-2 bg-primary-600 text-white rounded">1</button>
        <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded hover:bg-gray-300">2</button>
        <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded hover:bg-gray-300">3</button>
        <button class="px-4 py-2 bg-gray-200 text-gray-600 rounded hover:bg-gray-300">
          <i class="fas fa-chevron-right"></i>
        </button>
      </nav>
    </div>
  </div>
</Layout>

 