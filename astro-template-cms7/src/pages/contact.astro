---
import Layout from '../layouts/Layout.astro'

const title = 'お問い合わせ'
---

<Layout title={title}>
  <div class="mx-auto max-w-4xl">
    <h1 class="text-primary-800 mb-8 text-3xl font-bold">お問い合わせ</h1>

    <div class="mb-12">
      <div class="rounded-lg bg-white p-6 shadow-md">
        <form class="space-y-6">
          <div>
            <label for="name" class="mb-1 block text-base font-medium text-gray-700">お名前</label>
            <input
              type="text"
              id="name"
              class="focus:border-primary-500 w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none"
              required
            />
          </div>

          <div>
            <label for="email" class="mb-1 block text-base font-medium text-gray-700"
              >メールアドレス</label
            >
            <input
              type="email"
              id="email"
              class="focus:border-primary-500 w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none"
              required
            />
          </div>

          <div>
            <label for="subject" class="mb-1 block text-base font-medium text-gray-700">件名</label>
            <select
              id="subject"
              class="focus:border-primary-500 w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none"
              required
            >
              <option value="">選択してください</option>
              <option value="general">一般のお問い合わせ</option>
              <option value="membership">会員について</option>
              <option value="activities">活動について</option>
              <option value="volunteer">ボランティアについて</option>
              <option value="other">その他</option>
            </select>
          </div>

          <div>
            <label for="message" class="mb-1 block text-base font-medium text-gray-700"
              >お問い合わせ内容</label
            >
            <textarea
              id="message"
              rows="6"
              class="focus:border-primary-500 w-full rounded-md border border-gray-300 px-3 py-2 focus:outline-none"
              required></textarea>
          </div>

          <div class="flex items-center">
            <input
              type="checkbox"
              id="privacy"
              class="text-primary-600 focus:ring-primary-500 h-4 w-4 rounded border-gray-300"
              required
            />
            <label for="privacy" class="ml-2 block text-base text-gray-700">
              <a href="/privacy" class="text-primary-600 hover:text-primary-800"
                >プライバシーポリシー</a
              >に同意する
            </label>
          </div>

          <button
            type="submit"
            class="bg-primary-600 hover:bg-primary-700 focus:ring-primary-500 w-full rounded-md px-4 py-2 text-white focus:ring-2 focus:ring-offset-2 focus:outline-none"
          >
            送信する
          </button>
        </form>
      </div>
    </div>

    <div class="mb-12">
      <h2 class="text-primary-700 mb-4 text-2xl font-bold">その他のお問い合わせ方法</h2>
      <div class="rounded-lg bg-white p-6 shadow-md">
        <div class="space-y-4">
          <div>
            <h3 class="mb-2 text-lg font-bold">電話でのお問い合わせ</h3>
            <p class="text-gray-600">03-xxxx-xxxx（平日9:00-17:00）</p>
          </div>
          <div>
            <h3 class="mb-2 text-lg font-bold">メールでのお問い合わせ</h3>
            <p class="text-gray-600">info@example.com</p>
          </div>
          <div>
            <h3 class="mb-2 text-lg font-bold">FAXでのお問い合わせ</h3>
            <p class="text-gray-600">03-xxxx-xxxx</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
